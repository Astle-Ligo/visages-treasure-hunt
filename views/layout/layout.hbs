<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  {{#if admin}}
  {{>admin-header}}
  {{else}}
  {{>user-header}}
  {{/if}}
  {{{body}}}
  <footer>
    <div class="footer">
      <p>Made by <a href="">Astle</a></p>
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script>
    function startNavbarTimer() {
      const startTime = new Date().getTime(); // Save start time
      localStorage.setItem("gameStartTime", startTime); // Store in localStorage
    }

    function updateNavbarTimer() {
      const storedTime = localStorage.getItem("gameStartTime");
      if (!storedTime) return; // If no start time, don't update

      function calculateElapsedTime() {
        const now = new Date().getTime();
        const elapsed = Math.floor((now - storedTime) / 1000);

        const hours = String(Math.floor(elapsed / 3600)).padStart(2, "0");
        const minutes = String(Math.floor((elapsed % 3600) / 60)).padStart(2, "0");
        const seconds = String(elapsed % 60).padStart(2, "0");

        document.getElementById("navbarTimer").innerText = `${hours}:${minutes}:${seconds}`;
      }

      calculateElapsedTime();
      setInterval(calculateElapsedTime, 1000);
    }

    updateNavbarTimer(); // Start timer on page load
  </script>
</body>

</html>