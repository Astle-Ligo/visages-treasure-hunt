<div class="row pt-5">
    <div class="col-md-6 pt-5 m-auto">
        <div class="conatiner-fluid mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="user-login" method="post">
                {{#if loginErr}}

                <p class="error">Invalid username or password</p>

                {{/if}}
                <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter Email" id="">
                </div>

                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Password" id="">
                </div>

                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const notyf = new Notyf({
            duration: 3000, // 3s notification
            position: { x: "right", y: "top" } // Show at top-right
        });

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('error')) {
            notyf.error(urlParams.get('error'));
            window.history.replaceState(null, '', window.location.pathname);
        }
    });
</script>